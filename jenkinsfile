pipeline {
   agent any
   environment{
       CC = 'clang'
   }
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello world'
            }
        }
        stage('Environment test'){
            environment{
                ACCESS_KEY = credentials('my-Secret')
            }
            steps{
                sh 'printenv'
            }
        }
    }

    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}